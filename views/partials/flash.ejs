
<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show container my-5 d-flex col-6" role="alert">
        <strong>Congrats!</strong> <%= success %> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
    </div>
<% } %>

<% if (error && error.length) { %>
<div class="alert alert-danger alert-dismissible fade show container my-5 d-flex col-6" role="alert">
    <strong>Holy guacamole!</strong> <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
</div>
<% } %>